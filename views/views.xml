<odoo>
  <data>
    <!-- model.name inherit form view -->
    <record id="method_woocommerce.view_partner_form" model="ir.ui.view">
      <field name="name">method.woocommerce.view.partner.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='lang']" position="after">
          <button name="sync_partner" type="object" string="Obtener Clientes" class="btn-sm btn-link mb4 fa fa-envelope-o"/>
        </xpath>
        
      </field>
    </record>
  </data>
</odoo>